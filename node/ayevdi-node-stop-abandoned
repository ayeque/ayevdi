# AYESEC:POST_MD5('18 lines')=9e65a33c9f13130a71e5588e1211b9d2
# AYESEC:STATUTORY_HEADER
if [ "${ayevdi_sourcefrom}" != "${HOME}/.ayevdi/ayevdi-sourcefrom" ]
then
  echo "AyeVDI by https://ayeai.xyz"
  echo "Copyright (C) 2019-2020 Abhishek Choudhary"
  echo ""
  echo "NO WARRANTY, and ZERO LIABILITY (Limited to INR 1/- only)"
  echo "Further usage of these software, artifacts or methods"
  echo "are subject to the 'latest' license agreement avaialble at"
  echo "https://raw.githubusercontent.com/ayeai/spl/master/LICENSE"
  echo ""
  echo "AyeVDI not activated. Please use the following command to"
  echo "activate AyeVDI"
  echo '  ayesh=$(tempfile) && wget https://bit.ly/ayevdi-sfrom-init -O${ayesh} -q && . ${ayesh}'
  echo ""
  exit
fi
# AYESEC:STATUTORY_HEADER_COMPLETED
# AYESEC:PREV_MD5('18 lines')=9e65a33c9f13130a71e5588e1211b9d2

export tempstats=$(tempfile)
sourcefrom http://bit.ly/ayevdi-node-runstats >${tempstats}

for n in $(docker ps -q)
do
  # Prevent infant mortality (allow time for containers to start-up and connect)
  # TODO: This should be tuned to a fair interval
  # TODO: Tuning here and elsewhere should be AI driven - apply GAs
  export docktime=$(cat ${tempstats} | grep $n | cut -d',' -f2)
  export ayetime=$(cat ${tempstats} | grep $n | cut -d',' -f3)
  # Under high usage it 'can' take a few minutes to provide VDI
  # We are setting a nominal value of 3 mins = 180 secs
  # TODO: Tune this parameter
  if [ ${ayetime} -lt 120 ]
  then
    if [ ${docktime} -lt 60 ]
    then
      continue
    fi
  fi

  # TBD: Install lsof or kill container if lsof not found?
  # NOTE: This may be an attempt at bypassing policies, but there may be some valid cases
  export lsofstat=$(docker exec -it ${n} which lsof)
  echo if [ "${lsofstat}" == "/usr/bin/lsof" ]
  if [ "${lsofstat}" == "/usr/bin/lsof" ]
  then
    echo Found lsof on ${n}... Compliant image!
    logger "POLICY:ABANDON:LSOF:${n} Found lsof on ${n}... Compliant image!"
  else
    echo Installing lsof on ${n}... Rouge image?
    docker exec -it ${n} apt install -y lsof   
    logger "POLICY:ABANDON:LSOF:${n} Installing lsof... Rouge image?"
  fi
  
  export est=$(docker exec -it ${n} lsof -ai tcp | grep vnc | grep ESTABLISHED | wc -l)
  export vnc=$(docker exec -it ${n} lsof -ai tcp | grep vnc | wc -l)
  export usr=$(docker exec -it ${n} users | wc -l)
  echo ${n} vnc=${vnc} est=${est} usr=${usr}
  if [ ${vnc} -gt 0 ]
  then
    if [ ${est} -lt 1 ]
    then
      docker stop ${n}
      echo Stopping abandoned container ${n}
      logger "POLICY:ABANDON:STOP:${n} vnc=${vnc} est=${est} usr=${usr}"
    else
      logger "POLICY:ABANDON:SKIP:${n} vnc=${vnc} est=${est} usr=${usr}"
    fi
  else
    if [ ${usr} -lt 1 ]
    then
      docker stop ${n}
      echo Stopping abandoned container ${n}
      logger "POLICY:ABANDON:STOP:${n} vnc=${vnc} est=${est} usr=${usr}"
    else
      logger "POLICY:ABANDON:SKIP:${n} vnc=${vnc} est=${est} usr=${usr}"
    fi
  fi
done
