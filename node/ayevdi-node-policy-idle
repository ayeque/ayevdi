for n in $(docker ps -q)
do
  if [ 0 -lt $(docker exec -it ${n} bash -c 'export DISPLAY=:1 && mate-screensaver-command -q' | tee >(grep 'is active') >(grep 'is being inhibited') >/dev/null | wc -l) ]
  then
    docker stop $n
  fi
done
